<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/browse_background"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:focusable="true"
    >
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:id="@+id/browse_icon_background"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView
                        tools:src="@drawable/icon_royalroad"
                        android:id="@+id/browse_icon"
                        android:padding="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/browse_list_icon">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                    tools:text="Royal Road"
                    android:id="@+id/browse_text"
                    android:textColor="@color/textColor" android:paddingStart="10dp"
                    android:layout_marginStart="50dp" android:layout_marginEnd="50dp" android:gravity="start"
                    android:layout_gravity="center" android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </TextView>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>