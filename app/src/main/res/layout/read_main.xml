<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
        android:paddingTop="0dp"
        android:background="@color/readerBackground"
>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="20dp" android:orientation="vertical">
        <View android:id="@+id/read_topmargin"
              android:layout_width="match_parent" android:layout_height="0dp">
        </View>
        <ScrollView
                android:id="@+id/read_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.lagradost.quicknovel.ui.roundedbg.RoundedBgTextView
                    android:id="@+id/read_text"
                    android:padding="20dp"
                    android:fontFamily="serif"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/exampleTXT"
                    android:textColor="@color/readerTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            </com.lagradost.quicknovel.ui.roundedbg.RoundedBgTextView>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/readerHightlightedMetaInfo"

            android:layout_height="15dp">
        <TextView
                android:text="20:35"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/read_time"
                android:textSize="11sp"
                android:textColor="@color/readerTextColor"
                android:layout_width="50dp" android:layout_height="match_parent">
        </TextView>
        <TextView
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="10sp"
                android:id="@+id/read_chapter_name"
                android:layout_width="match_parent"
                android:ellipsize="middle"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:text="Chapter 1148 - You Will Support Me in the Future"
                android:textColor="@color/readerTextColor">
        </TextView>
        <!--<TextView
                android:text="78.5%"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="end"
                android:textSize="11sp"
                android:textColor="@color/readerTextColor"
                android:layout_width="50dp" android:layout_height="match_parent">
        </TextView>-->
    </FrameLayout>
</FrameLayout>