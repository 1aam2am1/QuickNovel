<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">
    <ProgressBar
            android:id="@+id/mainpage_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="visible"
    >
    </ProgressBar>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:layout_width="wrap_content" android:layout_height="0dp" android:id="@+id/mainpage_top_padding"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:id="@+id/mainpage_list"
                android:orientation="vertical"
        />
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mainpage_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_sort_24dp"
            tools:text="Action"

            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:contentDescription="Filter"
            android:layout_margin="16dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>